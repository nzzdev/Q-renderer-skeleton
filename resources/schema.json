{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "annotations": {
      "title": "Untertitel",
      "type": "string"
    },
    "sampleData": {
      "title": "Beispiele",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        }
      },
      "items": {
        "type": "object",
        "title": "Beispiel",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "value": {
            "title": "Wert",
            "type": "number",
            "Q:options": {
              "step": "0.1"
            }
          },
          "compactObject": {
            "title": "kompaktes Objekt",
            "type": "object",
            "Q:options": {
              "compact": true
            },
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              }
            }
          },
          "status": {
            "title": "Status",
            "type": "string",
            "default": "open",
            "enum": [
              "open",
              "in progress",
              "done"
            ],
            "Q:options": {
              "enum_titles": [
                "offen",
                "in Bearbeitung",
                "erledigt"
              ]
            }
          }
        }
      }
    },
    "sources": {
      "title": "Quellen",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
